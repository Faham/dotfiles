#----------------------------------------------

full_text=''
short_text=''
color='#FFFFFF'
urgent=false
icon='ï„ˆ'

#----------------------------------------------

displays=$(xrandr -q | grep -w "connected" | awk '{print $1}' | sed 'N;s/\n/\,/')

case $BLOCK_BUTTON in
    1) exec osd "$(detect_displays)" &> /dev/null & ;;  # left click
    *) ;;
esac

full_text=$(printf "%s" \
   "<span foreground='${color}'>${icon}</span>" \
   "<span font='8' rise='14000' foreground='${color}'>${displays}</span>" \
)
short_text=$full_text

#----------------------------------------------

echo $full_text
echo $short_text
echo $color

if [ "$urgent" = true ]; then
   exit 33
else
   exit 0
fi

