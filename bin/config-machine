#!/bin/bash

USER=faham

su

[ -f /etc/gdm/custom.conf ] && sed  -i "s/^#WaylandEnable=false/WaylandEnable=false/" /etc/gdm/custom.conf
patch /etc/sudoers patches/sudoers.patch
patch /etc/pacman.conf patches/pacman.conf

pacman -Syy

pacman -S fluxbox xosd terminator zsh pcmanfm vlc \
unclutter conky xscreensaver goldendict yaourt xdotool \ 
xterm bashrun git vim xorg-server xorg-apps xorg-server-utils \
xf86-video-intel xf86-input-synaptics mesa-libgl xorg-xinit \
ttf-dejavu htop openssh wget pulseaudio cmake python2 evince \
ctags gpicview zip unzip tk gvfs linux-headers virtualbox-guest-utils \
exfat-utils scrot gimp convert sshfs samba ntfs-3g pm-utils

rm /bin/python /bin/python-config
ln -s /bin/python2 /bin/python
ln -s /bin/python2-config /bin/python-config
ln -s /usr/bin/subl3 /usr/bin/subl

exit

yaourt -S google-chrome sublime-text-dev viber acroread
git submodule update --init --recursive
cd ~/.vim/bundle/YouCompleteMe && ./install.py

#sudo netctl enable nlp2s0-SASKTEL1211
